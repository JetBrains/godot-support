windows.x86_64.double.release = "./windows/rider-plugin.windows.template_release.x86_64.double.dll"

linux.x86_64.single.debug = "./linux/librider-plugin.linux.template_debug.x86_64.so"
linux.x86_64.double.debug = "./linux/librider-plugin.linux.template_debug.x86_64.double.so"
