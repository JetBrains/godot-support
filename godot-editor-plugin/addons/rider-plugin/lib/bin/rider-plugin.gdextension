[configuration]

entry_symbol = "example_library_init"
compatibility_minimum = "4.2.2"

[libraries]
; Relative paths ensure that our GDExtension can be placed anywhere in the project directory.
macos.single.debug = "./macos/librider-plugin.macos.template_debug.dylib"
macos.double.debug = "./macos/librider-plugin.macos.template_debug.double.dylib"
macos.single.release = "./macos/librider-plugin.macos.template_release.dylib"
